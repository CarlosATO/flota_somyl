{
  "phases": {
    "setup": {
      "nixPkgs": ["python311", "nodejs-18_x"]
    },
    "install": {
      "cmds": ["pip install -r requirements.txt"]
    },
    "build": {
      "cmds": [
        "cd frontend",
        "npm ci",
        "npm run build",
        "cd ..",
        "echo '=== Checking if dist was created ==='",
        "ls -la frontend/dist"
      ]
    }
  },
  "start": {
    "cmd": "gunicorn backend.app:app --workers 4 --bind 0.0.0.0:$PORT"
  }
}
